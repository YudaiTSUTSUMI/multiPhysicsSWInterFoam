FoamFile
{
    version     2.0;
    format      ascii;
    class       pointVectorField;
    object      pointDisplacement;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField     uniform (0 0 0);

boundaryField
{      
    wavePaddle
    {
        type            uniformFixedValue;
        uniformValue    csvFile;
        file      "$FOAM_CASE/constant/wavePaddle/waveMaker.csv";
        outOfBounds   clamp;
        nHeaderLine   1;
        mergeSeparators no;
        separator     ",";
        refColumn     0;
        componentColumns (1 2 3);
    }
    outlet
    {
        type                      fixedValue;
        value                     uniform (0 0 0);
    }
    walls
    {
        type zeroGradient;
    }
    top
    {
        type zeroGradient;
    }
}


